<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:id="@+id/imageBackground"
            android:layout_height="match_parent"/>
        <View
            android:background="@drawable/custtom_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relativel"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageBackground">
            <ImageView
                android:layout_width="80dp"
                android:elevation="6dp"
                android:id="@+id/imageHinhsanpham"
                android:layout_height="80dp"
                android:padding="2dp"
                android:layout_margin="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fffffffffffffffffff"
                android:textColor="#FAF7F7"
                android:layout_toRightOf="@+id/imageHinhsanpham"
                android:textStyle="bold"
                android:layout_alignTop="@+id/imageHinhsanpham"
                android:id="@+id/txtTitle"
                android:textSize="17sp"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageHinhsanpham"
                android:layout_below="@+id/txtTitle"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#F0EAEA"
                    android:id="@+id/txtMota"
                    android:text="chao ban jhjhfjshfjhsjhvjshvhjshvjsvhjhsjvhsjvhjshvjshvjshvjshvjshvjshvjshjsh"
                    android:layout_marginRight="40dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>