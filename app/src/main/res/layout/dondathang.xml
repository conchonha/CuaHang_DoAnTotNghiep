<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/linnerr"
        android:layout_below="@+id/linner"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="#"
            android:padding="5dp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="Sản Phẩm"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="SL"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="Đơn Giá"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="Thành Tiền"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/linnerr"
        android:layout_marginTop="-5dp"
        android:id="@+id/txtbackground3"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#6F6E6E"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/recyclerviewhoadon"
        android:padding="5dp"
        android:layout_below="@+id/txtbackground3"
        android:layout_height="0dp"
        android:layout_weight="1"/>
<RelativeLayout
android:layout_width="match_parent"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:text="Tổng Tiền:"
    android:padding="5dp"
    android:textSize="22sp"
    android:textStyle="bold"
    android:id="@+id/txt1"
    android:textColor="#000"
    android:layout_height="wrap_content"/>
<TextView
    android:layout_width="wrap_content"
    android:text="Giá"
    android:padding="5dp"
    android:textSize="20dp"
    android:textStyle="bold"
    android:id="@+id/txtgiasanphamhoadon"
    android:layout_alignParentRight="true"
    android:textColor="#000"
    android:layout_height="wrap_content"/>
<TextView
    android:layout_width="match_parent"
    android:padding="5dp"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_below="@+id/txt1"
    android:id="@+id/txt2"
    android:textColor="#000"
    android:layout_height="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Hỗ Trợ : Mọi thắc mắt xin liên hệ thaibasang8@gmail.com"
        android:textSize="16sp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_below="@+id/txt2"
        android:id="@+id/txtdc"
        android:padding="5dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/txtdc"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:text="Địa Chỉ: Nam Kỳ-Khởi Nghĩa, Hòa Quý, Ngũ Hành Sơn, Đà Nẵng"
        android:layout_height="wrap_content"/>

</RelativeLayout>

</LinearLayout>