<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông Tin TK:"
                        android:id="@+id/txttentaikhoanquanlyadmin"
                        android:maxWidth="200dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="#FF5832"
                        android:textSize="20dp" />


                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="18dp"
                            android:textColor="#EE6A90B5"
                            android:text="MK: "
                            android:padding="5dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#EE6A90B5"
                            android:text="**********"
                            android:id="@+id/textViewMat_khau"
                            android:padding="5dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="18dp"
                            android:textColor="#EE6A90B5"
                            android:text="SĐT: "
                            android:padding="5dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#EE6A90B5"
                            android:text="0366426402"
                            android:id="@+id/textViewSDT"
                            android:padding="5dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="18dp"
                            android:textColor="#EE6A90B5"
                            android:text="Email: "
                            android:padding="5dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#EE6A90B5"
                            android:text="thabasang8@gmail.com"
                            android:maxWidth="220dp"
                            android:id="@+id/textViewEmail"
                            android:padding="5dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#EE6A90B5"
                        android:text="Địa Chỉ: "
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#EE6A90B5"
                        android:text="0366426402"
                        android:id="@+id/textViewDia_chi"
                        android:maxWidth="200dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="18dp"
                            android:textColor="#EE6A90B5"
                            android:text="Tài Khoản: "
                            android:padding="5dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#EE6A90B5"
                            android:text="0366426402"
                            android:id="@+id/txtloaitaikhoan"
                            android:maxWidth="200dp"
                            android:padding="5dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="100dp"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="50dp"
                        android:elevation="10dp"
                        android:id="@+id/roundImageViewQuan_ly_tai_khoan"
                        android:layout_height="100dp"
                        android:src="@drawable/user" />

                    <TextView
                        android:id="@+id/textViewTen_tai_khoan"
                        android:layout_width="120dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/roundImageViewQuan_ly_tai_khoan"
                        android:padding="5dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginRight="-10dp"
                        android:text="ten thai bsajjdjjjd"
                        android:textColor="#EE6A90B5"
                        android:textSize="18dp" />
                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/delete"
                        android:id="@+id/imageViewDeleteTai_khoan_admin"
                        android:layout_below="@+id/textViewTen_tai_khoan"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>