<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/ngoisao"
                android:scaleType="fitXY"
                android:id="@+id/imggiohang11"
                android:layout_marginRight="10dp"
                android:layout_height="130dp"/>
            <ImageButton
                android:layout_width="30dp"
                android:src="@drawable/delete"
                android:background="@null"
                android:scaleType="fitXY"
                android:id="@+id/imgbttonxoa"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/imggiohang11"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:text="Ten san Pham"
                android:id="@+id/txttensanphamgiohang"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/imggiohang11"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="260000"
                android:layout_marginTop="5dp"
                android:id="@+id/txtgiasanphamgiohang"
                android:layout_below="@+id/txttensanphamgiohang"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:layout_toRightOf="@+id/txtgiasanphamgiohang"
                android:layout_below="@+id/txttensanphamgiohang"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="VNĐ"
                android:id="@+id/txtvnd"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/txtgiasanphamgiohang"
                android:layout_toRightOf="@+id/imggiohang11"
                android:padding="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    app:cardCornerRadius="5dp"
                    android:layout_height="30dp">
                    <Button
                        android:layout_width="match_parent"
                        android:background="@color/colorchu"
                        android:text="-"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:id="@+id/btngiam"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="70dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="1"
                        android:gravity="center"
                        android:id="@+id/txtsoluonggiohang"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="60dp"
                        android:background="@color/colorchu"
                        android:layout_gravity="bottom|center"
                        android:layout_height="2dp"/>
                </FrameLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    app:cardCornerRadius="5dp"
                    android:layout_height="30dp">
                    <Button
                        android:layout_width="match_parent"
                        android:background="@color/colorchu"
                        android:text="+"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:id="@+id/btntang"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>