<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        app:cardCornerRadius="10dp"
        android:layout_height="0dp"
        android:layout_weight="9.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_weight="9"
                android:layout_height="0dp">
                 <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/colorchu"
                        android:textStyle="bold"
                        android:text="Đơn Hàng"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/txtiddonhang"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Thông tin"
                        android:padding="5dp"
                        android:id="@+id/txtthongtin"
                        android:layout_alignParentRight="true"
                        android:textColor="#000"
                        android:layout_alignBottom="@+id/txtiddonhang"
                        android:textStyle="italic"
                        android:background="@drawable/bodergiohang"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView
                    android:text="Địa Chỉ: "
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imglocation"
                        android:src="@drawable/iconlocation"
                        android:layout_alignParentRight="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:background="@drawable/bodergiohang"
                        android:layout_toLeftOf="@+id/imglocation"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:id="@+id/txtdiachinhanhan"
                        android:textSize="18sp"
                        android:layout_marginRight="10dp"
                        android:layout_height="40dp"/>
                </RelativeLayout>
                <TextView
                    android:text="Số Điện Thoại: "
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="@drawable/bodergiohang"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txtsodienthoa"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:text="Trình Trạng: "
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:background="@drawable/bodergiohang"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txttrinhtrangdonhang"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:text="Các Sản Phẩm Đặt Mua: "
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerviewchitietdonhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/relativelupdatechitietdonhang"
                android:layout_weight="0.8">
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/colorchu"
                    android:text="update"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/txttext"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:layout_height="60dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/update"
                    android:layout_alignRight="@+id/txttext"
                    android:layout_marginRight="30dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>



