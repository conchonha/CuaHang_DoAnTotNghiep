<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="350dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="@drawable/bodergiohang"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_marginBottom="35dp"
            android:textColor="@color/colorchu"
            android:text="Sổ Địa Chỉ"
            android:layout_gravity="left"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Địa Chỉ: "
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@drawable/bodergiohang"
            android:textSize="14sp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:id="@+id/edtdiachi"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:text="Reset"
                    android:textColor="@color/colorwhile"
                    android:background="@drawable/btnhuy"
                    android:layout_marginRight="20dp"
                    android:textSize="14sp"
                    android:id="@+id/btnhuythongtintaikhoan1"
                    android:textStyle="bold"
                    android:layout_height="35dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="Xác Nhận"
                    android:textColor="@color/colorwhile"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:id="@+id/btnsacnhanthongtintaikhoan1"
                    android:background="@drawable/btnxacnhan"
                    android:layout_height="35dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>